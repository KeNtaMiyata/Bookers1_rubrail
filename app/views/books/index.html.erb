<html>
  <head>
    <title>WebCampBackendNew</title>
  </head>
  
  <body>
    <main>
      <h1>Books</h1>
        <table class="books-table">
          <tr>
            <th class="table-head">Title</th>
            <th class="table-head">Body</th>
            <th></th>
          </tr>
          
          <% @books.each do |book| %>
          <tr>
            <th class="table-item">
              <span><%= book.title %></span>
              
            </th>
            
            <th class="table-item">
              <span><%= book.body %></span>
            </th>
            
            <th class="table-item">
              <span>
                <%= link_to 'Show', book_path(book.id) %>
                <%= link_to 'Edit', edit_book_path(book.id) %>
                <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?ï¼Ÿ" %>
              </span>
            </th>
          </tr>
          <% end %>
        
        </table>
      
      
      <h1>New book</h1>
      
      
        <% if @book.errors.any? %>
          <div class="error-explanation">
            <%= @book.errors.count %> errors prohibited this book from being saved:
            <ul class="error-ul">
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      
      
      <div>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
        
          <h4>Body</h4>
          <%= f.text_area :body %> <br>
        
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </main>
  </body>
</html>